{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".astro/**", "dist/**", ".output/**", ".sanity/**"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    }
  }
}

