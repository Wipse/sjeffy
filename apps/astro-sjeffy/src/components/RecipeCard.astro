---
interface Props {
  recipe: {
    _id: string
    name: string
    slug: {
      current: string
    }
    description?: string
    imageUrl?: string
    rating?: number
    timeToCook?: number
    uploadDate: string
  }
}

const { recipe } = Astro.props;
---

<article class="overflow-hidden rounded-lg border bg-white transition-shadow hover:shadow-xl">
  <a href={`/recipes/${recipe.slug.current}`} class="group block">
    {recipe.imageUrl
? (
      <div class="relative h-48 overflow-hidden bg-gray-200">
        <img
          src={recipe.imageUrl}
          alt={recipe.name}
          class="size-full object-cover transition-transform duration-300 group-hover:scale-105"
        />
      </div>
    )
: (
      <div class="bg-linear-to-br flex h-48 items-center justify-center from-orange-100 to-orange-200">
        <span class="text-6xl">üçΩÔ∏è</span>
      </div>
    )}

    <div class="p-6">
      <h2 class="mb-2 text-2xl font-bold transition-colors group-hover:text-orange-600">
        {recipe.name}
      </h2>

      {recipe.description && (
        <p class="mb-4 line-clamp-2 text-gray-600">
          {recipe.description}
        </p>
      )}

      <div class="flex flex-wrap gap-3 text-sm text-gray-500">
        {recipe.timeToCook && (
          <span class="flex items-center gap-1 rounded-full bg-orange-50 px-3 py-1">
            <span class="text-orange-500">‚è±Ô∏è</span>
            {recipe.timeToCook} min
          </span>
        )}

        {recipe.rating && (
          <span class="flex items-center gap-1 rounded-full bg-yellow-50 px-3 py-1">
            <span class="text-yellow-500">‚≠ê</span>
            {recipe.rating}/5
          </span>
        )}

        <span class="flex items-center gap-1 rounded-full bg-gray-50 px-3 py-1">
          <span>üìÖ</span>
          {new Date(recipe.uploadDate).toLocaleDateString('nl-NL', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          })}
        </span>
      </div>
    </div>
  </a>
</article>

