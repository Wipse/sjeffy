---
import { sanityClient } from 'sanity:client'
import RecipeCard from '../components/RecipeCard.astro'
import '../styles/global.css'

interface Recipe {
  _id: string
  name: string
  slug: {
    current: string
  }
  description?: string
  imageUrl?: string
  ingredients?: string[]
  rating?: number
  timeToCook?: number
  uploadDate: string
}

const RECIPES_QUERY = `*[
  _type == "recipe"
  && defined(slug.current)
]|order(uploadDate desc)[0...12]{
  _id,
  name,
  slug,
  description,
  "imageUrl": image.asset->url,
  ingredients,
  rating,
  timeToCook,
  uploadDate
}`

const recipes = await sanityClient.fetch<Recipe[]>(RECIPES_QUERY);
---

<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>Sjeffy - Recepten</title>
</head>
<body>
  <main class="bg-linear-to-br min-h-screen from-orange-50 to-white">
    <div class="container mx-auto max-w-7xl px-4 py-12">
      {/* Header */}
      <header class="mb-12 text-center">
        <h1 class="bg-linear-to-r mb-4 from-orange-600 to-red-600 bg-clip-text text-5xl font-bold text-transparent">
          üçΩÔ∏è Sjeffy's Recepten
        </h1>
        <p class="text-lg text-gray-600">
          Ontdek heerlijke recepten voor elke gelegenheid
        </p>
      </header>

      {/* Debug panel (verwijder dit later) */}
      <details class="mb-8 rounded-lg bg-white p-4 shadow">
        <summary class="cursor-pointer font-semibold text-gray-700 hover:text-orange-600">
          üîç Debug Data (klik om te tonen)
        </summary>
        <pre class="mt-4 overflow-auto rounded bg-gray-100 p-4 text-xs">
          {JSON.stringify(recipes, null, 2)}
        </pre>
      </details>

      {/* Recipe Grid */}
      {recipes.length > 0
? (
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          {recipes.map(recipe => (
            <RecipeCard recipe={recipe} />
          ))}
        </div>
      )
: (
        <div class="py-16 text-center">
          <p class="mb-4 text-xl text-gray-500">Nog geen recepten gevonden</p>
          <p class="text-gray-400">
            Voeg recepten toe via de Sanity Studio op
            <a href="http://localhost:3333" class="text-orange-600 hover:underline">
              localhost:3333
            </a>
          </p>
        </div>
      )}
    </div>
  </main>
</body>
</html>
