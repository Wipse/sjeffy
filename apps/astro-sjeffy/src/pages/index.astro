---
import CardGrid from '../components/sections/CardGrid.astro'
import Mainhero from '../components/sections/heros/Mainhero.astro'
import Layout from '../layouts/main.astro'
import { getAllRecipes } from '../queries'

const recipes = await getAllRecipes()
---

<Layout title="Sjeffy | Recepten" description="Ontdek heerlijke recepten voor elke gelegenheid">
  <Mainhero
    title="What's Cooking, Good Looking?"
    recipes={recipes}
  />
  <CardGrid
    headingText="Meest bekeken"
    recipes={recipes}
    interactiveLabels={true}
  />
</Layout>
