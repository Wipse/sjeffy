---
import BasicCard from '../components/cards/Basic.astro'
import { getAllRecipes } from '../queries'
import '../styles/global.css'

const recipes = await getAllRecipes()
---

<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>Sjeffy - Recepten</title>
</head>
<body>
  <main class="bg-linear-to-br from-primary-50/50 min-h-screen to-white">
    <div class="container mx-auto max-w-7xl px-4 py-12">
      {/* Header */}
      <header class="mb-12 text-center">
        <h1 class="text-primary-500 mb-4 text-5xl font-bold">
          üçΩÔ∏è Sjeffy's Recepten
        </h1>
        <p class="text-lg text-gray-600">
          Ontdek heerlijke recepten voor elke gelegenheid
        </p>
      </header>

      {/* Debug panel (verwijder dit later) */}
      <details class="mb-8 rounded-lg bg-white p-4 shadow">
        <summary class="hover:text-primary-600 cursor-pointer font-semibold text-gray-700">
          üîç Debug Data (klik om te tonen)
        </summary>
        <pre class="mt-4 overflow-auto rounded bg-gray-100 p-4 text-xs">
          {JSON.stringify(recipes, null, 2)}
        </pre>
      </details>

      {/* Recipe Grid */}
      {recipes.length > 0
? (
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          {recipes.map(recipe => (
            <BasicCard recipe={recipe} />
          ))}
        </div>
      )
: (
        <div class="py-16 text-center">
          <p class="mb-4 text-xl text-gray-500">Nog geen recepten gevonden</p>
          <p class="text-gray-400">
            Voeg recepten toe via de Sanity Studio op
            <a href="http://localhost:3333" class="text-primary-600 hover:underline">
              localhost:3333
            </a>
          </p>
        </div>
      )}
    </div>
  </main>
</body>
</html>
